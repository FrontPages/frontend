<section class="headlines mdl-grid">
  {{#each model as |headline| }}
    <article class="mdl-cell mdl-cell--3-col">
      <div class="headlines-card mdl-card mdl-shadow--2dp">
        <figure class="headlines-card-screenshot">
          <img src="{{headline.snapshot}}" alt="Screenshot">
        </figure>
        <div class="headlines-card-title mdl-card__title">
          <h2 class="mdl-card__title-text">{{headline.site.name}}</h2>
        </div>
        <div class="mdl-card__supporting-text">
          <time class="headlines-card-date">{{moment-from-now headline.created_at}}</time>
        </div>
      </div>
    </article>
  {{/each}}
</section>
